GridLayout:

    rows:2
    cols:1
    TouchFunctionsPlatinum:


<TouchFunctionsPlatinum@Widget>:
    btn: btn
    zoom_label: zoom_label
    lbl_opponent_value: lbl_opponent_value
    canvas.before:
        Color:
            rgba: [1, 0, 0.2,0.7]
        Ellipse:
            pos: root.coord_x_plat - root.zoom/2, root.coord_y_plat - root.zoom/2
            size: root.zoom ,root.zoom

    GridLayout:
        size_hint: (1, 0.3)
        Label:
            text: str(root.coord_x_plat)
            pos: 690,40

        Label:
            id: zoom_label
            text: "Zoom_Cl2"
            pos: 690,80
        Label:
            id: lbl_opponent_value
            text: "Opponent Result :"
            pos: 690,150

        Button:
            id: btn
            text: "Turn ON lights"
            pos: 690,10
            size: 100,50
            on_release: root.btn_touch_up()
        Button:
            id: btn2
            text: "Connect"
            pos: 690,300
            size: 100,60
            on_release: root.connect()

